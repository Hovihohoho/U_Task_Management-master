<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="pnNotify" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.components.dialogs.InlineNotificationController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lbSubject" text="Subject">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Line endX="200.0" />
                <Label fx:id="lbContent" text="Content" wrapText="true">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </center>
</BorderPane>
